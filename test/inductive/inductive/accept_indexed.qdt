inductive Nat where
  | zero
  | succ (n : Nat)

inductive Vector (A : Type) : Nat → Type where
  | nil : Vector A Nat.zero
  | cons (n : Nat) (head : A) (tail : Vector A n) : Vector A (Nat.succ n)

example :
    (A : Type) →
    (motive : (n : Nat) → Vector A n → Type) →
    motive Nat.zero (Vector.nil A) →
    ((n : Nat) → (head : A) → (tail : Vector A n) → motive n tail → motive (Nat.succ n) (Vector.cons A n head tail)) →
    (n : Nat) → (v : Vector A n) → motive n v :=
  Vector.rec

inductive Fin : Nat → Type where
  | zero (n : Nat) : Fin (Nat.succ n)
  | succ (n : Nat) (i : Fin n) : Fin (Nat.succ n)

example :
    (motive : (n : Nat) → Fin n → Type) →
    ((n : Nat) → motive (Nat.succ n) (Fin.zero n)) →
    ((n : Nat) → (i : Fin n) → motive n i → motive (Nat.succ n) (Fin.succ n i)) →
    (n : Nat) → (i : Fin n) → motive n i :=
  Fin.rec

inductive LE (n : Nat) : Nat → Type where
  | refl : LE n n
  | step (m : Nat) (p : LE n m) : LE n (Nat.succ m)

example :
    (n : Nat) →
    (motive : (m : Nat) → LE n m → Type) →
    motive n (LE.refl n) →
    ((m : Nat) → (p : LE n m) → motive m p → motive (Nat.succ m) (LE.step n m p)) →
    (m : Nat) → (p : LE n m) → motive m p :=
  LE.rec

inductive Eq (A : Type) (a : A) : A → Type where
  | refl : Eq A a a

example :
    (A : Type) →
    (a : A) →
    (motive : (b : A) → Eq A a b → Type) →
    motive a (Eq.refl A a) →
    (b : A) → (p : Eq A a b) → motive b p :=
  Eq.rec
