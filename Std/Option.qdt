inductive Option (A : Type) where
  | none
  | some (a : A)

def Option.map (A B : Type) (f : A → B) (o : Option A) : Option B :=
  Option.rec A (fun _ => Option B) (Option.none B) (fun a => Option.some B (f a)) o

def Option.bind (A B : Type) (o : Option A) (f : A → Option B) : Option B :=
  Option.rec A (fun _ => Option B) (Option.none B) (fun a => f a) o

def Option.getD (A : Type) (o : Option A) (default : A) : A :=
  Option.rec A (fun _ => A) default (fun a => a) o
