inductive Option (A : Type) where
  | none : Option A
  | some : A → Option A

def Option.map (A B : Type) (f : A → B) : Option A → Option B := Option.rec A (fun _ => Option B) (Option.none B) (fun a => Option.some B (f a))
def Option.bind (A B : Type) (o : Option A) (f : A → Option B) : Option B := Option.rec A (fun _ => Option B) (Option.none B) f o
def Option.getD (A : Type) (o : Option A) (dflt : A) : A := Option.rec A (fun _ => A) dflt (id A) o
