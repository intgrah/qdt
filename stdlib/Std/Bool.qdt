inductive Bool where
  | true
  | false

def Bool.ite.{u} (A : Type u) (b : Bool) (t f : A) : A :=
  Bool.rec.{u} (fun _ => A) t f b

def Bool.dite.{u} (A : Bool â†’ Type u) (b : Bool) (t : A Bool.true) (f : A Bool.false) : A b :=
  Bool.rec.{u} A t f b

def Bool.not (b : Bool) :=
  Bool.rec.{0} (fun _ => Bool) Bool.false Bool.true b

def Bool.and (a b : Bool) :=
  Bool.rec.{0} (fun _ => Bool) Bool.false b a

def Bool.or (a b : Bool) :=
  Bool.rec.{0} (fun _ => Bool) b Bool.true a
